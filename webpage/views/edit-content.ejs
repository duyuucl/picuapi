<%- include('partials/header.ejs') %>
<div class="main_content">
    <div class="header">
        <h2>Edit Content</h2>
    </div>
    <p><%= typeof msg != 'undefined' ? msg : '' %></p>
    <form action="/edit-content/upload-img1/<%= parentId %>" method="POST" enctype="multipart/form-data">
        <div class="upload-img1">
            <label for="img1">Upload the first image:</label>
            <input type="file" name="img1"/>
            <button type="submit" name="submit" class="upload-btn">Upload</button>
        </div>
    </form>
    
    <form action="/edit-content/upload-img2/<%= parentId %>" method="POST" enctype="multipart/form-data">
        <div class="upload-img2">
            <label for="img2">Upload the second image:</label>
            <input type="file" name="img2"/>
            <button type="submit" name="submit" class="upload-btn">Upload</button>
        </div>
    </form>

    <form action="/edit-content/upload-img3/<%= parentId %>" method="POST" enctype="multipart/form-data">
        <div class="upload-img3">
            <label for="img3">Upload the third image:</label>
            <input type="file" name="img3"/>
            <button type="submit" name="submit" class="upload-btn">Upload</button>
        </div>
    </form>
    <form action="/edit-content/upload-text/<%= parentId %>" method="POST">
        <div class="text-editor">
            <textarea name="editor" id="editor"></textarea>
            <button type="submit" name="submit" class="upload-btn">Upload</button>
        </div>
    </form>
</div>
<script src="/public/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>

<%- include('partials/footer.ejs') %>